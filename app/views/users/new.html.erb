<center><h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <div style="color:black;"><%= f.text_field :email %></div>
  </div>
  <br>
  <div class="field">
    <%= f.label :password %><br />
    <div style="color:black;"><%= f.password_field :password %></div>
  </div>
  <br>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <div style="color:black;"><%= f.password_field :password_confirmation %></div>
  </div>
  <br>
  <div class="actions" style="color:black;"><%= f.submit "Sign Up" %></div></center>
<% end %>