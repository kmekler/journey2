<body class="beach">
	<div class="form">
	<h1 class="heading">Edit your entry</h1>
	<br>
			<%= form_for @journal do |f| %>

				<div>
					<strong>Location</strong>
					<br>
    				<%= f.text_field :location, type: "text", :class => "form-control new-person-form", placeholder: "Location"%>
    				<br>
  				</div>
				<div class="form-group">
					<%= f.label :weather %> 
					  <%= f.select(:weather, options_for_select([['great', 5], ['good', 4], ['mediocre', 3], ['poor', 2], ['horrible', 1]]), {}, {class: "form-control"}) %>
				</div>
				<br>
				<div class="form-group">
					<%= f.label :food %> 
					  <%= f.select(:food, options_for_select([['great', 5], ['good', 4], ['mediocre', 3], ['poor', 2], ['horrible', 1]]), {}, {class: "form-control"}) %>
				</div>
				<br>
				<div class="form-group">
					<%= f.label :mood %> 
					  <%= f.select(:mood, options_for_select([['great', 5], ['good', 4], ['mediocre', 3], ['poor', 2], ['horrible', 1]]), {}, {class: "form-control"}) %>
				</div>
				<br>
				<strong>Comment</strong>
				<%= f.text_field :comment, type: "text", :class => "form-control new-person-form", placeholder: "Comment"%>
				<br>
				
			<%= f.submit :class => "btn btn-primary btn-default" %>

			<% end %>	

            <%= link_to journals_path, class: "btn btn-primary btn-default" do %>
      			<div class="icon-ok icon-white">back</div>   
    		<% end %>
		</div>
	</div>	
</body>	

